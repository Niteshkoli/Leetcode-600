class Solution {
public:
    void countGoodNodes(TreeNode* root,int &count,int max){
        if(root==NULL)
            return ;
        if(root->val>=max){
            count++;
            max= root->val;
        }
        countGoodNodes(root->left,count,max);
        countGoodNodes(root->right,count,max);
            
    }
    int goodNodes(TreeNode* root) {
        int count=0;
        if(!root)
            return count;
        countGoodNodes(root,count,root->val);
        
        return count;
    }
};
